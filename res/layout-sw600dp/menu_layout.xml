            	android:drawableLeft="@drawable/onebit_09" />
            <ImageView
                style="@style/Row.Image"
                android:layout_marginRight="15dp"
                android:src="@drawable/onebit_21" />
        </TableRow>
        <View style="@style/Row.Line" /> 
        <TableRow
