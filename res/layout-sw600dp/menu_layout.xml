        </TableRow>
        <View style="@style/Row.Line" />
        <!-- DosBox FrameSkip -->
        <TableRow
            android:id="@+id/tableRow_FrameSkip"
            style="@style/Row.Click">
        	<TextView
            	style="@style/MenuText.Row"
            	android:text="@string/info_frameskip"
            	android:layout_weight="0.5" 
            	android:drawableLeft="@drawable/onebit_13" />
        	<TextView
        	    android:id="@+id/info_frameskip"
            	style="@style/MenuText.Row"
            	android:text="2"
            	android:layout_weight="0.5" 
            	android:drawableRight="@drawable/onebit_21"
            	android:layout_marginRight="15dp" />
        </TableRow>
        <View style="@style/Row.Line" /> 
        <!-- Input Mode -->
        <TableRow
            android:id="@+id/tableRow_InputMode"
            style="@style/Row.Click">
        	<TextView
            	style="@style/MenuText.Row"
            	android:text="@string/info_inputmode"
            	android:layout_weight="0.5" 
            	android:drawableLeft="@drawable/onebit_27" />
        	<TextView
        	    android:id="@+id/info_inputmode"
            	style="@style/MenuText.Row"
            	android:text="Touchscreen"
            	android:layout_weight="0.5"
            	android:drawableRight="@drawable/onebit_21"
            	android:layout_marginRight="15dp" />
        </TableRow>
        <View style="@style/Row.Line" /> 
        <!-- Tracking Mode -->
        <TableRow
            android:id="@+id/tableRow_Tracking"
            style="@style/Row.Click">
        	<TextView
            	style="@style/MenuText.Row"
            	android:text="@string/info_tracking"
            	android:layout_weight="0.5"
            	android:drawableLeft="@drawable/mouse_01" />
        	<TextView
        	    android:id="@+id/info_tracking"
            	style="@style/MenuText.Row"
            	android:text="Absolute"
            	android:layout_weight="0.5"
            	android:drawableRight="@drawable/onebit_21"
            	android:layout_marginRight="15dp" />
        </TableRow>
        <View style="@style/Row.Line" /> 
        <!-- Virtual Keyboard -->
        <TableRow
            style="@style/Row.Click">
        	<include
        	    layout="@layout/kbdswitch" />
        </TableRow>
        <View style="@style/Row.Line" />
        <!-- Virtual Joystick -->
        <TableRow
            style="@style/Row.Click">
        	<include layout="@layout/joyswitch" />
        </TableRow>
        <View style="@style/Row.Line" />
        <!-- Virtual Keys -->
        <TableRow
            style="@style/Row.Click">
        	<include layout="@layout/buttonswitch" />
        </TableRow>
        <View style="@style/Row.Line" />         
        <!-- Screen Scaling -->
        <TableRow
