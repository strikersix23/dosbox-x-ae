        	<TextView
        	    style="@style/MenuText.Title"
            	android:text="@string/info_dbinfo" />
        </TableRow>
        <View style="@style/Row.Line" /> 
        <!-- Current Governor -->
        <TableRow
            style="@style/Row.Click">
        	<TextView
            	style="@style/MenuText.Row"
            	android:text="@string/info_governor"
            	android:layout_weight="0.5" 
            	android:drawableLeft="@drawable/onebit_15" />
